<html>
<head>
    <title>Sign In / Sign Up</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"></link>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(to right, #4299e1, #9f7aea);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
        }
        .container {
            background: white;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            width: 100%;
            max-width: 400px;
        }
        .tabs {
            display: flex;
            justify-content: space-around;
            background: #edf2f7;
            padding: 16px;
        }
        .tabs button {
            font-weight: 600;
            color: #4a5568;
            background: none;
            border: none;
            cursor: pointer;
            outline: none;
        }
        .form-container {
            padding: 24px;
            transition: opacity 0.5s;
        }
        .form-container.hidden {
            display: none;
        }
        .form-container.fade-enter-active, .form-container.fade-leave-active {
            transition: opacity 0.5s;
        }
        .form-container.fade-enter, .form-container.fade-leave-to {
            opacity: 0;
        }
        .form-container h2 {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 16px;
            text-align: center;
        }
        .form-container form {
            display: flex;
            flex-direction: column;
        }
        .form-container form .form-group {
            margin-bottom: 16px;
        }
        .form-container form .form-group label {
            color: #4a5568;
            margin-bottom: 8px;
            display: block;
        }
        .form-container form .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #cbd5e0;
            border-radius: 5px;
            outline: none;
            transition: border-color 0.3s;
        }
        .form-container form .form-group input:focus {
            border-color: #4299e1;
        }
        .form-container form button {
            background: linear-gradient(to right, #4299e1, #9f7aea);
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }
        .form-container form button:hover {
            background: linear-gradient(to right, #3182ce, #805ad5);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="tabs">
            <button id="signInBtn">Sign In</button>
            <button id="signUpBtn">Sign Up</button>
        </div>
        <div id="signInForm" class="form-container fade-enter-active">
            <h2 class="text-blue-600">Sign In</h2>
            <form>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" placeholder="Enter your password">
                </div>
                <button type="submit">Sign In</button>
            </form>
        </div>
        <div id="signUpForm" class="form-container hidden fade-enter-active">
            <h2 class="text-purple-600">Sign Up</h2>
            <form>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" placeholder="Enter your password">
                </div>
                <button type="submit">Sign Up</button>
            </form>
        </div>
    </div>

    <script>
        const signInBtn = document.getElementById('signInBtn');
        const signUpBtn = document.getElementById('signUpBtn');
        const signInForm = document.getElementById('signInForm');
        const signUpForm = document.getElementById('signUpForm');

        signInBtn.addEventListener('click', () => {
            signUpForm.classList.add('fade-leave-active');
            signInForm.classList.add('fade-enter-active');
            setTimeout(() => {
                signUpForm.classList.add('hidden');
                signUpForm.classList.remove('fade-leave-active');
                signInForm.classList.remove('hidden');
            }, 500);
        });

        signUpBtn.addEventListener('click', () => {
            signInForm.classList.add('fade-leave-active');
            signUpForm.classList.add('fade-enter-active');
            setTimeout(() => {
                signInForm.classList.add('hidden');
                signInForm.classList.remove('fade-leave-active');
                signUpForm.classList.remove('hidden');
            }, 500);
        });
    </script>
</body>
</html>
